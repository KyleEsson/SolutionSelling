@model SolutionSelling.Models.AddItem

@{
    ViewData["Title"] = "Sell Product";
}

<div class="text-center">
    <h1 class="display-4">Create/Edit Items</h1>
</div>

<form method="post" action="CreateItem" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <textarea type="text" class="form-control" asp-for="Description"></textarea>
    </div>
        <label for="" class="form-label">Price</label>
    <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input type="" class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity">
    </div>
    <div>
        <p>&nbsp;</p>
    </div>
    <div class="form-group">
        <label asp-for="Picture" class="control-label"></label>
        <input asp-for="Picture" accept="image/*"/>
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
    <div>
        <p>&nbsp;</p>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
