@model ItemView

@{
    ViewData["Title"] = "Item View";
}

<div class="text-center">
    <div class="text-center">
        <h1 class="display-4">@Model.Name</h1>
    </div>
    <div class="form-group">
        <img class="ItemPageImg" src="data:@Model.PictureFormat;base64,@Model.Picture" />
    </div>
    <div class="form-group">
        @Model.Description
    </div>
</div>
